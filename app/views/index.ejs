</head>

<body ng-controller="appController">
    <header class="main_header" ng-class="{sm: headerSm}">
        <nav class="main_nav" ng-show="!authentication.user">
            <a href="/signin">登录</a>
            <span>|</span>
            <a href="/signup">注册</a>
        </nav>
        <nav class="main_nav" ng-show="authentication.user">
